pipeline {
    agent any
    tools {
        maven 'Maven 3.6.1' 
    }
    stages { 
        stage('Build') {
            steps {
                echo 'Compiling worker app'
                dir('worker'){
                    sh 'worker mvn compile'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Running Unit Tests on worker app'
                
            }
        }
        stage('Package') {
            steps {
                echo 'Packaging worker app'
                
            }
        }
    }
    post { 
        always { 
            echo 'Build pipeline for worker app is complete'
            echo ' a test pipeline by manuh....'
            
        }
    }
}
